<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>com.splicemachine.tutorials</groupId>
  <artifactId>splice-tutorial-iot-spark</artifactId>
  <name>Splice Machine DataFrame Row VTI</name>
  <version>2.5.0.1707</version>
  <prerequisites>
    <maven>3.3.9</maven>
  </prerequisites>
  <build>
    <plugins>
      <plugin>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>3.1</version>
        <configuration>
          <source>${java.version}</source>
          <target>${java.version}</target>
          <encoding>UTF-8</encoding>
          <maxmem>1024m</maxmem>
          <fork>true</fork>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-shade-plugin</artifactId>
        <version>2.4.3</version>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
  <repositories>
    <repository>
      <id>splicemachine-public</id>
      <url>http://repository.splicemachine.com/nexus/content/groups/public</url>
    </repository>
  </repositories>
  <dependencies>
    <dependency>
      <groupId>org.apache.spark</groupId>
      <artifactId>spark-streaming_2.11</artifactId>
      <version>2.0.2</version>
      <scope>provided</scope>
      <exclusions>
        <exclusion>
          <artifactId>spark-core_2.11</artifactId>
          <groupId>org.apache.spark</groupId>
        </exclusion>
      </exclusions>
    </dependency>
    <dependency>
      <groupId>com.splicemachine</groupId>
      <artifactId>db-client</artifactId>
      <version>2.5.0.1709-SNAPSHOT</version>
      <scope>provided</scope>
    </dependency>
    <dependency>
      <groupId>com.splicemachine</groupId>
      <artifactId>db-engine</artifactId>
      <version>2.5.0.1709-SNAPSHOT</version>
      <scope>provided</scope>
      <exclusions>
        <exclusion>
          <artifactId>hadoop-common</artifactId>
          <groupId>org.apache.hadoop</groupId>
        </exclusion>
        <exclusion>
          <artifactId>hbase-common</artifactId>
          <groupId>org.apache.hbase</groupId>
        </exclusion>
        <exclusion>
          <artifactId>sketches-core</artifactId>
          <groupId>com.yahoo.datasketches</groupId>
        </exclusion>
        <exclusion>
          <artifactId>memory</artifactId>
          <groupId>com.yahoo.datasketches</groupId>
        </exclusion>
        <exclusion>
          <artifactId>db-shared</artifactId>
          <groupId>com.splicemachine</groupId>
        </exclusion>
        <exclusion>
          <artifactId>hppc</artifactId>
          <groupId>com.carrotsearch</groupId>
        </exclusion>
        <exclusion>
          <artifactId>joda-time</artifactId>
          <groupId>joda-time</groupId>
        </exclusion>
        <exclusion>
          <artifactId>commons-lang3</artifactId>
          <groupId>org.apache.commons</groupId>
        </exclusion>
        <exclusion>
          <artifactId>spark-catalyst_2.11</artifactId>
          <groupId>org.apache.spark</groupId>
        </exclusion>
        <exclusion>
          <artifactId>spark-unsafe_2.11</artifactId>
          <groupId>org.apache.spark</groupId>
        </exclusion>
      </exclusions>
    </dependency>
  </dependencies>
  <properties>
    <java.version>1.8</java.version>
    <splice_machine.version>2.5.0.1709-SNAPSHOT</splice_machine.version>
    <kafka.scala.version>2.10</kafka.scala.version>
    <spark.kafka.version>0-10_2.11</spark.kafka.version>
    <spark.scala.version>2.11</spark.scala.version>
    <spark.version>2.0.2</spark.version>
    <kafka.version>0.10.0.1</kafka.version>
  </properties>
</project>

