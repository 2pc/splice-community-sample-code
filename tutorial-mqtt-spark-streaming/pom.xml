	<!-- splice_machine-assembly-2.0.1.11-SNAPSHOT-mapr5.1.0_complete.jar -->
	<properties>
		<java.version>1.7</java.version>
		<splice_machine.version>2.0.1.17-SNAPSHOT</splice_machine.version>
		<envClassifier>mapr5.1.0</envClassifier>
        <envHbase>hbase1.0.0</envHbase>
        <hadoop.version>2.7.0-mapr-1602</hadoop.version>
        <hadoop.tools.version>1.0.3-mapr-5.1.0</hadoop.tools.version>
        <hbase.version>1.1.1-mapr-1602</hbase.version>
        <hive.version>0.13.0-mapr-1602</hive.version>
        <zookeeper.version>3.4.5-mapr-1503</zookeeper.version>
        <spark-assembly-id>spark-assembly-hadoop2.7.0-mapr-1602</spark-assembly-id>
        <spark.version>1.6.1</spark.version>
        <kafka.version>0.8.2.1</kafka.version>
	</properties>


	<!-- When using Maven, particularly in a corporate environment, connecting to the internet to download dependencies is not acceptable for security, 
	speed or bandwidth reasons. For that reason, it is desirable to set up an internal repository to house a copy of artifacts, and to 
	publish private artifacts to. -->
	<!-- The repository property specifies the internal splicemachine repository -->
	<repositories>
		<repository>
			<name>Splice Nexus Server </name>
			<id>splicemachine</id>
			<url>http://nexus.splicemachine.com/nexus/content/groups/developers</url>
			<releases>
				<enabled>true</enabled>
			</releases>
			<snapshots>
				<enabled>true</enabled>
			</snapshots>
		</repository>
		<repository>
			<id>apache-repo</id>
			<name>Apache Repository</name>
			<url>https://repository.apache.org/content/repositories/releases</url>
			<releases>
				<enabled>true</enabled>
			</releases>
			<snapshots>
				<enabled>false</enabled>
			</snapshots>
		</repository>
		<repository>
		    <id>paho-mqtt-client</id>
		    <name>Paho MQTT Client</name>
		    <url>https://repo.eclipse.org/content/repositories/paho-releases/</url>
    	</repository>		
	</repositories>
	<dependencies>
		<dependency>
			<groupId>com.splicemachine</groupId>
			<artifactId>splice_machine</artifactId>
			<version>${splice_machine.version}</version>
        </dependency>
        <!-- Contains the SpliceSpark that is needed -->
<!-- 
		<dependency>
			<groupId>com.splicemachine</groupId>
			<artifactId>hbase_sql-${envClassifier}</artifactId>
			<version>${splice_machine.version}</version>
        </dependency>
 -->        
        <dependency>
            <groupId>org.apache.spark</groupId>
            <artifactId>${spark-assembly-id}</artifactId>
            <version>${spark.version}</version>
        </dependency>
        <!-- Needed for to process the MQTT in spark -->
        <dependency>
    		<groupId>org.apache.spark</groupId>
    		<artifactId>spark-streaming-mqtt_2.10</artifactId>
    		<version>${spark.version}</version>
		</dependency>
        <!-- Needed for sample MQTT client to publish messages -->
		<dependency>
		    <groupId>org.eclipse.paho</groupId>
		    <artifactId>org.eclipse.paho.client.mqttv3</artifactId>
		    <version>1.1.0</version>
		</dependency>

		<!-- Used for parsing JSON object and converting to object -->
        <!-- Needed just for running: mvn -DskipTests exec:java -DreadQueue -->
        <dependency>
            <groupId>org.apache.logging.log4j</groupId>
            <artifactId>log4j-api</artifactId>
            <version>2.5</version>
        </dependency>
        <!-- Needed just for running: mvn -DskipTests exec:java -DreadQueue -->
        <dependency>
            <groupId>org.apache.logging.log4j</groupId>
            <artifactId>log4j-core</artifactId>
            <version>2.5</version>
        </dependency>
        <!-- Needed just for running: mvn -DskipTests exec:java -DreadQueue -->
		<dependency>
			<groupId>org.slf4j</groupId>
			<artifactId>slf4j-api</artifactId>
			<version>1.7.1</version>
		</dependency>
		<!-- Needed just for running: mvn -DskipTests exec:java -DreadQueue -->
		<dependency>
			<groupId>org.slf4j</groupId>
			<artifactId>slf4j-log4j12</artifactId>
			<version>1.7.1</version>
		</dependency>    
<!-- 		
        <dependency>
            <groupId>org.apache.zookeeper</groupId>
            <artifactId>zookeeper</artifactId>
            <version>${zookeeper.version}</version>
        </dependency>	
 -->        	
        <!-- Used for parsing CSV to object conversion -->
        <dependency>
		    <groupId>net.sf.supercsv</groupId>
		    <artifactId>super-csv</artifactId>
		    <version>2.4.0</version>
		</dependency>
		<dependency>
		    <groupId>net.sf.supercsv</groupId>
		    <artifactId>super-csv-joda</artifactId>
		    <version>2.4.0</version>
		</dependency>
	</dependencies>

	<build>
		<plugins>
	        <plugin>
	          <groupId>org.apache.maven.plugins</groupId>
	          <artifactId>maven-compiler-plugin</artifactId>
	          <version>3.1</version>
	          <configuration>
	            <source>${java.version}</source>
	            <target>${java.version}</target>
	            <encoding>UTF-8</encoding>
	            <maxmem>1024m</maxmem>
	            <fork>true</fork>
	          </configuration>
	        </plugin>
		</plugins>
	</build>
</project>
